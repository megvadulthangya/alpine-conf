#!/bin/sh

PREFIX=@PREFIX@
: ${LIBDIR=$PREFIX/lib}
. "$LIBDIR/libalpine.sh"

usage() {
	cat <<-__EOF__
		usage: setup-desktop [-h] [gnome|plasma|xfce|mate|sway|awesome]

		Install a standard desktop

		options:
		 -h  Show this help

	__EOF__
	exit $1
}

while getopts "h" opt; do
	case $opt in
		h) usage 0;;
		'?') usage "1" >&2;;
	esac
done
shift $(($OPTIND - 1))

if [ $# -gt 1 ]; then
	usage "1" >&2
fi

if [ $# -eq 0 ]; then
	users=$(awk -F: '{if ($3<65000 && $3 >= 1000) print $1}' "$ROOT"/etc/passwd 2>/dev/null)
	if [ -z "$users" ]; then
		setup-user -g "audio,video,netdev"
	fi
fi

de="$1"

valid_desktops="xfce gnome plasma mate sway awesome none"
if [ $# -eq 1 ] && ! isin "$de" $valid_desktops; then
	echo "$de is not a valid desktop" >&2
	usage "1" >&2
fi
shift

while ! isin "$de" $valid_desktops; do
	ask "Which desktop environment? ('gnome', 'plasma', 'xfce', 'mate', 'sway' 'awesome' or 'none')" none
	de="$resp"
done

case "$de" in
	none)
		exit 0
		;;
	mate)
		setup-xorg-base mate-desktop-environment ${BROWSER:-firefox} \
			consolekit2 \
			gvfs \
			lightdm \
			lightdm-gtk-greeter \
			polkit \
			dbus \
			dbus-x11 \
			font-dejavu \
			"$@"
		rc-update add dbus
		rc-update add lightdm
		;;
	xfce)
		setup-xorg-base xfce4 ${BROWSER:-firefox} \
			consolekit2 \
			gvfs \
			lightdm \
			lightdm-gtk-greeter \
			polkit \
			xfce4-terminal \
			"$@"
		rc-update add lightdm
		;;
	gnome)
		setup-xorg-base ${BROWSER:-firefox} "$@"
		# apk info needs community repos which are enabled with setup-xorg-base
		apk add $(apk info --quiet --depends gnome gnome-apps-core)
		rc-update add gdm
		rc-update add elogind
		;;
	plasma)
		setup-xorg-base ${BROWSER:-firefox} \
			ark \
			bluedevil \
			breeze \
			breeze-gtk \
			dbus \
			discover \
			drkonqi \
			font-noto \
			gwenview \
			kate \
			kde-cli-tools \
			kde-gtk-config \
			kde-icons \
			kdeplasma-addons \
			kgamma \
			kinfocenter \
			kio-fuse \
			kmenuedit \
			konsole \
			kscreen \
			ksshaskpass \
			kwallet-pam \
			kwayland-integration \
			pinentry-qt \
			pipewire-alsa \
			pipewire-pulse \
			plasma-browser-integration \
			plasma-desktop \
			plasma-disks \
			plasma-nm \
			plasma-pa \
			plasma-systemmonitor \
			plasma-vault \
			plasma-welcome \
			plasma-workspace-wallpapers \
			polkit-elogind \
			polkit-kde-agent-1 \
			powerdevil \
			print-manager \
			sddm-breeze \
			sddm-kcm \
			spectacle \
			systemsettings \
			udisks2 \
			xdg-desktop-portal-kde \
			xdg-user-dirs \
			"$@"
		rc-update add dbus
		rc-update add sddm
		;;
	sway)
		setup-wayland-base ${BROWSER:-firefox} \
			dmenu \
			font-dejavu \
			foot \
			grim \
			i3status \
			sway \
			swayidle \
			swaylockd \
			util-linux-login \
			wl-clipboard \
			wmenu \
			xwayland \
			"$@"
		;;
  awesome)
		setup-xorg-base awesome ${BROWSER:-firefox} \
			lightdm \
			lightdm-gtk-greeter \
			polkit \
			lxappearance \
			feh \
			imagemagick \
			thunar \
			thunar-archive-plugin \
			picom \
			xautolock \
			i3lock-color \
			xfce4-terminal \
			git \
			"$@"
		#downloading the missing component, which is needed to get a working program menu
		git clone https://github.com/lcpz/awesome-freedesktop.git /etc/xdg/awesome/freedesktop &&
		#download the default working awesome configuration
		wget -q https://github.com/megvadulthangya/alpine-conf/raw/refs/heads/awesome-wm/files/rc.lua -O /etc/xdg/awesome/rc.lua &&
		#download the working picom conf
		wget -q https://github.com/megvadulthangya/alpine-conf/raw/refs/heads/awesome-wm/files/picom.conf -O /etc/xdg/picom.conf &&
		#download i3lock locking script
		wget -q https://github.com/megvadulthangya/alpine-conf/raw/refs/heads/awesome-wm/files/locker.sh -O /etc/xdg/awesome/locker.sh &&
		mkdir /usr/share/wallpapers &&
		wget -q https://github.com/megvadulthangya/alpine-conf/raw/refs/heads/awesome-wm/files/wallpapers.tgz &&
		tar -xvzf wallpapers.tgz -C /usr/share/wallpapers &&
		rc-update add lightdm
		;;
	*)
		usage "1" >&2
		;;
esac

users=$(awk -F: '{if ($3<65000 && $3 >= 1000) print $1}' "$ROOT"/etc/passwd 2>/dev/null)
if [ -z "$users" ]; then
	echo "WARNING: You need to create a user account. Please run: setup-user" >&2
	echo "" >&2
fi
